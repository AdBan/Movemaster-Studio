<UserControl x:Class="IDE.Views.Browse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="192*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="193*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="46*"/>
        </Grid.RowDefinitions>


        <!--List-->
        <TextBlock Text="RV-E3J files:" Margin="10,7,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ListView x:Name="listView_RobotList" Grid.ColumnSpan="2" Margin="0,23,191.8,46" Grid.RowSpan="4"/>

        <!--Buttons for list management-->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
            <Button Content="Refresh" Command="{Binding RefreshClickCommand}" Width="75" Height="26" Margin="0,5,0,0"/>
            <Button Content="Download" Command="{Binding DownloadClickCommand}" Width="75" Height="26" Margin="5,5,0,0"/>
            <Button Content="Upload" Command="{Binding UploadClickCommand}" Width="75" Height="26" Margin="5,5,0,0"/>
        </StackPanel>

        <!--Command window-->
        <Grid Grid.Row="2" Grid.RowSpan="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <ListView x:Name="msglist" ItemsSource="{Binding Path=MessageList.Messages}" Background="Gray" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" SizeChanged="msglist_SizeChanged" Loaded="msglist_Loaded">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="timestamp" Width="150" DisplayMemberBinding="{Binding MyTime}"/>
                        <GridViewColumn Header="message"  DisplayMemberBinding="{Binding MyMessage}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            
            <DockPanel Grid.Row="1">
                <Button Content="Send" Command="{Binding SendClickCommand}"  Width="75" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                <TextBox Text="{Binding UserInputText, Mode=TwoWay}" AcceptsReturn="False" AcceptsTab="False" DockPanel.Dock="Left"/>
            </DockPanel>
        </Grid>


    </Grid>
</UserControl>