<mui:ModernDialog x:Class="IDE.Common.Views.DeleteProgramDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  d:DesignHeight="100" d:DesignWidth="300">

    <!-- Note: ModernDialog buttons are defined in the constructor of the code behind class -->

    <Grid Height="50" Width="300" VerticalAlignment="Top">
        <StackPanel>
            <TextBlock x:Name="TextBlock_AboveInput" Text="Do you really want to remove selected program?"/>
            <CheckBox x:Name="checkBox" Content="Remove permamently" Margin="10"/>
        </StackPanel>
    </Grid>
    
</mui:ModernDialog>
