<UserControl x:Class="IDE.Common.Views.Editor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:IDE.Common.ViewModels.Converters"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:models="clr-namespace:IDE.Common.Models"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:SelectionToBoolean x:Key="SelectionConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="192*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Button Command="{Binding Create}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0" Width="40" Height="40" ToolTip="Create File">
                <Button.Background>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <Grid>
                                <Grid DataContext="{Binding Appearance}" Background="{Binding ThemeColor}"/>
                                <Image Source="/Icons/Create New.png" Stretch="Uniform"/>
                            </Grid>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Button.Background>
            </Button>
            <Button Command="{Binding Load}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,10,0,0" Width="40" Height="40" ToolTip="Open File">
                <Button.Background>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <Grid>
                                <Grid DataContext="{Binding Appearance}" Background="{Binding ThemeColor}"/>
                                <Image Source="/Icons/Open.png" Stretch="Uniform"/>
                            </Grid>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Button.Background>
            </Button>
            <Button Command="{Binding Save}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,10,0,0"  Width="40" Height="40" ToolTip="Save File">
                <Button.Background>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <Grid>
                                <Grid DataContext="{Binding Appearance}" Background="{Binding ThemeColor}"/>
                                <Image Source="/Icons/Save.png" Stretch="Uniform"/>
                            </Grid>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Button.Background>
            </Button>
            <Button Command="{Binding SaveAs}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,10,0,0"  Width="40" Height="40" ToolTip="Save As File">
                <Button.Background>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <Grid>
                                <Grid DataContext="{Binding Appearance}" Background="{Binding ThemeColor}"/>
                                <Image Source="/Icons/Save as.png" Stretch="Uniform"/>
                            </Grid>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Button.Background>
            </Button>
            <Button Command="{Binding Delete}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5,10,0,0" Grid.Row="2" Grid.Column="1"  Width="40" Height="40" ToolTip="Delete File">
                <Button.Background>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <Grid>
                                <Grid DataContext="{Binding Appearance}" Background="{Binding ThemeColor}"/>
                                <Image Source="/Icons/Delete.png" Stretch="Uniform"/>
                            </Grid>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Button.Background>
            </Button>
        </StackPanel>
        <Button Command="{Binding Send}" Content="Send" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,0,0" Grid.Row="2" Grid.Column="2" Width="75" Height="26"/>
        <TextBlock Text="Local files:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,3,0,0" Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" FontWeight="Bold" Height="16" Width="59"/>
        <ContentControl Content="{Binding Path=ProgramEditor}" Grid.Row="1" Grid.Column="2" IsEnabled="{Binding SelectedProgram, Converter={StaticResource SelectionConverter}, FallbackValue=False}"/>
        <TextBlock Text="{Binding Path=SelectedProgram.Name}" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="25" FontWeight="Bold"/>
        <ListView ItemsSource="{Binding Path=ListManager.Programs}" Grid.Row="1" SelectedItem="{Binding SelectedProgram}" Grid.ColumnSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
