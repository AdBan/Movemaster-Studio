<UserControl x:Class="POCs.Console"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POCs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
        <Grid Background="#FF1E1E1E">
        <RichTextBox x:Name="richTextBox" HorizontalAlignment="Left" Height="290" VerticalAlignment="Top" Width="254" Margin="36,0,0,0" Background="#FF1E1E1E" BorderBrush="{x:Null}" Foreground="White" SelectionBrush="#FF1E1E1E" BorderThickness="0"/>
        <TextBlock x:Name="lineCountingBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="36" Height="290" TextAlignment="Right" Background="#FF1E1E1E" Foreground="#FF7AC1FF" IsEnabled="False"/>
    </Grid>
</UserControl>
