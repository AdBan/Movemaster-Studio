<Window x:Class="POCs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POCs"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="{Binding SumX}" HorizontalAlignment="Left" Margin="116,41,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="{Binding SumY}" HorizontalAlignment="Left" Margin="230,104,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="{Binding SumZ}" HorizontalAlignment="Left" Margin="374,114,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="415,28,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Start}"/>
    </Grid>
</Window>
